{
  "name": "@nick46000/react-dialog",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Nick <24428341+Nick46000@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nick46000/react-dialog.git"
  },
  "scripts": {
    "build": "rimraf dist/ && copyfiles -e '**/*.{ts,tsx}' -u 1 src/**/* dist/ &&tsc -p ./",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:fix": "yarn lint:ts:fix",
    "lint:ts": "eslint --ext .ts,.tsx . && prettier --check '**/*.{ts,tsx}'",
    "lint:ts:fix": "eslint --fix --ext .ts,.tsx . && prettier --write '**/*.{ts,tsx}'",
    "lint:css": "stylelint 'src/**/*.{css,scss}'",
    "lint:css:fix": "stylelint 'src/**/*.{css,scss}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:ts:fix"
    ],
    "*.{css,scss}": [
      "yarn lint:css:fix"
    ],
    "*": [
      "prettier --write ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/cz-commitlint": "^17.1.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "commitizen": "^4.2.5",
    "copyfiles": "^2.4.1",
    "eslint": ">=7.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^7.0.0",
    "inquirer": "^9.1.2",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "stylelint": "^8.0.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^0.7.0",
    "stylelint-scss": "^1.2.1",
    "ts-jest": "^29.0.3",
    "typescript": "*"
  },
  "dependencies": {
    "clsx": "^1.2.1"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
